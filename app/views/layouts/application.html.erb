<!DOCTYPE html>
<html>
<head>
  <title>Crimpr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!-- Add these line for detecting device width -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta content='<%= user_signed_in? ? current_user.id : "" %>' name='user-id'/>
</head>
<body id="<%= on_homepage? ? 'homepage' : 'non-homepage' %>">

  <%= render "shared/navbar" %>

  <%= yield(:before_js) %>

  <%= render "shared/notice" %>
  <%= render "shared/alert" %>

    <%= yield %>

  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?libraries=places&amp;key=AIzaSyCIRKi-e_kRly7l-3w7PvbZcSVs2bMHuqo" %>

  <%= javascript_include_tag "https://google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" %>
  <%= javascript_include_tag "https://google-maps-utility-library-v3.googlecode.com/svn/trunk/richmarker/src/richmarker-compiled.js" %>

  <%= yield(:after_js) %>

  <%= render "shared/footer" %>

</body>
</html>
