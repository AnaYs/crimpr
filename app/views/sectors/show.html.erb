<h1><%= @sector.name %></h1>

<p><%= @sector.description %></p>

<%= link_to "Download", "/#{@area.id}_#{@sector.id}.pdf", class:"btn btn-default" %>

<h3>Upload a guide for this sector</h3>
<%= form_for([@area, @sector], html: { multipart: true }) do |f| %>
  <p>
    <%= f.label :document %>
    <%= f.file_field :document %>
  </p>
  <p><%= f.submit %></p>
<% end %>


<%= link_to @area.name, area_path, class:"btn btn-default" %>
<%= link_to "Home", areas_path, class:"btn btn-default" %>
