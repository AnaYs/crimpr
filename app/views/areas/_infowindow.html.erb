<h5> <%= object.name %> </h5>
<div class="row">
  <div class="col-xs-12">
    <p> <%= object.location %> </p>
  </div>
</div>
<div class="row">
  <div class="col-xs-6">
    <p> <%= object.weather.condition %> </p>
  </div>
  <div class="col-xs-6">
    <p> <%= object.weather.temperature %> </p>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 text-center">
    <p> <%= link_to "Climb here >>", area_path(object) %></p>
  </div>
</div>



